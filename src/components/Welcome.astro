<script>
  // Mobile menu toggle
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Close mobile menu on link click
  mobileMenu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });

  // Navbar scroll effect
  const navbar = document.getElementById('navbar');
  const body = document.body;
  body.addEventListener('scroll', () => {
    console.log(body.scrollTop);
    if (body.scrollTop > 100) {
      navbar?.classList.add('bg-black/90', 'backdrop-blur-lg', 'shadow-lg');
    } else {
      navbar?.classList.remove('bg-black/90', 'backdrop-blur-lg', 'shadow-lg');
    }
  });

  // Contador animado
  function animarContador(elemento: any, valorFinal: any, duracao = 2000) {
    const el = document.getElementById(elemento);
    if (!el) return;
    
    let inicio = 0;
    const incremento = Math.ceil(valorFinal / (duracao / 16));
    const intervalo = setInterval(() => {
      inicio += incremento;
      if (inicio >= valorFinal) {
        el.innerText = valorFinal.toLocaleString("pt-BR");
        clearInterval(intervalo);
      } else {
        el.innerText = inicio.toLocaleString("pt-BR");
      }
    }, 16);
  }

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        animarContador("contador-agendamentos", 6000);
        animarContador("contador-sites", 10);
        animarContador("contador-clientes", 50);
        animarContador("contador-satisfacao", 99);
        observer.disconnect();
      }
    });
  });

  const contadorSection = document.getElementById("contador");
  if (contadorSection) {
    observer.observe(contadorSection);
  }
</script>
